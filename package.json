{
  "name": "ngx-tour-guide",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build showcase",
    "build:lib": "ng build ngx-tour-guide && npm run copy:readme",
    "watch": "ng build showcase --watch --configuration development",
    "deploy:pages": "ng deploy --base-href=/ngx-tour-guide/",
    "copy:readme": "copyfiles ./README.md ./dist/ngx-tour-guide",
    "publish:lib": "pushd \"dist/ngx-tour-guide\" && npm publish && popd",
    "publish": "npm run build:lib && npm run publish:lib",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.6",
    "@angular/cdk": "^16.2.5",
    "@angular/common": "^16.2.6",
    "@angular/compiler": "^16.2.6",
    "@angular/core": "^16.2.6",
    "@angular/forms": "^16.2.6",
    "@angular/platform-browser": "^16.2.6",
    "@angular/platform-browser-dynamic": "^16.2.6",
    "@angular/router": "^16.2.6",
    "@shipbit/ngx-tour-guide": "file:./dist/ngx-tour-guide",
    "ngx-highlightjs": "^10.0.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.3",
    "@angular/cli": "^16.2.3",
    "@angular/compiler-cli": "^16.2.6",
    "@types/jasmine": "~4.3.6",
    "@types/node": "^20.6.3",
    "angular-cli-ghpages": "^1.0.7",
    "copyfiles": "^2.4.1",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^16.2.3",
    "typescript": "^5.1.6"
  }
}