{
  "name": "ngx-tour-guide",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build showcase",
    "build:lib": "ng build ngx-tour-guide && npm run copy:readme",
    "watch": "ng build showcase --watch --configuration development",
    "deploy:pages": "ng deploy --base-href=/ngx-tour-guide/",
    "copy:readme": "copyfiles ./README.md ./dist/ngx-tour-guide",
    "publish:lib": "pushd \"dist/ngx-tour-guide\" && npm publish && popd",
    "publish": "npm run build:lib && npm run publish:lib",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.9",
    "@angular/cdk": "^14.2.0",
    "@angular/common": "^15.2.9",
    "@angular/compiler": "^15.2.9",
    "@angular/core": "^15.2.9",
    "@angular/forms": "^15.2.9",
    "@angular/platform-browser": "^15.2.9",
    "@angular/platform-browser-dynamic": "^15.2.9",
    "@angular/router": "^15.2.9",
    "@shipbit/ngx-tour-guide": "file:./dist/ngx-tour-guide",
    "ngx-highlightjs": "^6.1.2",
    "rxjs": "~7.5.4",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.9",
    "@angular/cli": "^15.2.9",
    "@angular/compiler-cli": "^15.2.9",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^17.0.21",
    "angular-cli-ghpages": "^1.0.0",
    "copyfiles": "^2.4.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^15.2.2",
    "typescript": "~4.8.4"
  }
}